{
  "title": "DreamRobot",
  "description": "DreamRobot REST API",
  "docsUrl": "https://github.com/elasticio/dreamrobot-component",
  "credentials": {
	"fields":{
	  "username": {
		"label": "DR REST API Username",
		"required": true,
		"viewClass": "TextFieldView",
		"placeholder": "api_xxxxxxxxxx_12345"
	  },
	  "password": {
		"label": "DR REST API Password",
		"required": true,
		"viewClass": "PasswordFieldView",
		"placeholder": "****************************************"
	  },
	  "platform": {
		"label": "stock identification by",
		"required": false,
		"viewClass": "SelectView",
		"note": "If the connection imports orders, or exports stocks, please define, how the platforms article number should be matched to the DreamRobots stock.",
		"model": {"":"Lager-Nummer", "SKU_":"Artikelnummer", "EAN_":"Barcode/EAN"}//TODO: OK so?
	  }
	}
  },
  "triggers": {
	"sendParcelSentState": {
	  "main": "./lib/triggers/sendParcelSentState.js",
	  "type": "webhook",
	  "title": "Transfer 'parcel sent' state",
	  "description": "tell your shop or marketplace, the order has been shipped",
	  "dynamicMetadata": false,
	  "fields" : {
		"module" : {
		  "label": "platform (DR internal type)",
		  "required": true,
		  "viewClass": "TextFieldView",
		  "placeholder": "e.g. 'eBay' or 'Tradoria'"
		}
	  },
	  "metadata": {
		"out": {
		  "type": "object",
		  "properties": {
			"order_id": {
			  "title": "order_id",
			  "type": "string"
			}
		  }
		}
	  }
	},
	"sendCrossplatformInventoryAdjustments": {
	  "main": "./lib/triggers/sendCrossplatformInventoryAdjustments.js",
	  "type": "webhook",
	  "title": "Update external stock quantities (PüMa/cia)",
	  "description": "When PüMa/cia(Cross-platform-Inventory-Adjustments) is triggered, send new stocklevel.",
	  "metadata": {
		"out": {
		  "type": "object",
		  "properties": {
			"stock_id": {
			  "title": "stock_id",
			  "type": "string"
			},
			"quantity": {
			  "title": "quantity",
			  "type": "float"
			}
		  }
		}
	  }
	},
	"sendProduct": {
	  "main": "./lib/triggers/sendProduct.js",
	  "type": "webhook",
	  "title": "Create or Update a Product (external)",
	  "description": "transfer a stock from DR (stock / lister_shop) to external shop or marketplace",
	  "metadata": {
		"out": {
		  "type": "object",
		  "properties": {
			"stock_id": {
			  "title": "stock_id",
			  "type": "string"
			},
			"lister_id": {
			  "title": "lister_id",
			  "type": "string"
			}
		  }
		}
	  }
	}
  },
  "actions": {
	"createOrder" : {
	  "title": "Create Order",
	  "main": "./lib/actions/CreateOrder.js",
	  "description": "Creates the given Order.",
	  "metadata": {
		"in": {
		  "type": "object",
		  "properties": {
			"id": {
			  "title": "order",
			  "type": "object",
			  "required": true
			}
		  }
		}
	  }
	}
  }
}